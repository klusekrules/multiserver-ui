form((submit)="submit()", #frm="ngForm")
  .flex.align-content-center.justify-content-center.min-h-screen.m-auto
    .flex.align-items-center
      p-card.border-round-lg
        ng-template(pTemplate='header')
          .bg-green-600.text-white.border-round-top-lg
            h1.p-3 Logowanie
        .p-float-label.-mt-3
          input(id='login', name='login', type="text", [(ngModel)]="login", pInputText)
          label(for='login') Login

        .p-float-label.mt-5
          input(id='pass', name='pass', type="password", [(ngModel)]="pass", pInputText)
          label(for='pass') Has≈Ço

        ng-template(pTemplate='footer')
          .flex.justify-content-end
            button.bg-green-600(type="submit", label='Zaloguj', [disabled]='frm.invalid || isPending', pButton)